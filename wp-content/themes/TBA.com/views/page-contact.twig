{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1>{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}

					
					
					{% if post.get_field('contacts') %}
					{% for contact in post.get_field('contacts') %}
						<h4>{{contact.person_name}}</h4>
						<h4>{{contact.phone_number}}</h4>
					{% endfor %}
					{% endif %}




				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}